<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#A9A9A9"
                />
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#F4F4F4"
                />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="14dp"
                android:bottom="14dp"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</selector>